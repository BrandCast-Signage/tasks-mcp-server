{
  "name": "@brandcast/google-tasks-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for Google Tasks - enables AI assistants to manage tasks",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "google-tasks-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-tasks",
    "tasks",
    "ai",
    "claude",
    "assistant",
    "productivity"
  ],
  "author": "Jamie Duncan <jamie@brandcast.app>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrandCast-Signage/tasks-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/BrandCast-Signage/tasks-mcp-server/issues"
  },
  "homepage": "https://github.com/BrandCast-Signage/tasks-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.68",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
